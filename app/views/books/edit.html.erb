  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url:'/books/' + @book.id.to_s,method: :patch, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
<% end %>

<p><%= link_to 'Show','/books/show/' + @book.id.to_s %></p>
<p><%= link_to 'Back','/books/index' %></p>