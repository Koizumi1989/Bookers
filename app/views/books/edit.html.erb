<%= stylesheet_link_tag "books", :media => "all" %>
<h2>Editiong Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url:'/books/' + @book.id.to_s,method: :patch, local:true do |f| %>
  <p class="edit_html">Title</p>
  <%= f.text_field :title %>

  <p class="edit_html">Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' , :class => "btn" %>
<% end %>

<span><%= link_to 'Show','/books/' + @book.id.to_s %></span>
